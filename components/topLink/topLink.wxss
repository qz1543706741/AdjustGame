/* components/topLink/topLink.wxss */
.containter {
  position: fixed;
  right: -10%;
  top: 0;
}

.img {
  height: 90px;
  position: relative;
}

.img::before{
  content: attr(data-before);
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  text-shadow: 0 0 5px #FF0000, 0 0 5px #6bf403;
  font-size: 1.5rem;
}
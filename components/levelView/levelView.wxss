/* components/topLink/pay/pay.wxss */
@import "../../pages/template/template.wxss";

page {
  height: 100%;
}

.dialog {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  justify-content: center;
  margin-top: 5%;
}

.dialog-cancel {
  position: absolute;
  width: 14%;
  z-index: 999;
  right: 0;
  top: -12%;
}

.dialog-bg {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 85%;
  height: 80vh;
  margin-top: 10%;
  border-radius: 8px;
  background-color: #f4f6e5;
  box-shadow: 2px 2px 10px 1px #3f3f3f;
}

.dialog-form {
  width: 80%;
  height: 85%;
  border: 2px solid #ff9a9d;
  border-radius: 8px;
  padding: 5% 5%;
  position: relative;
}

.dialog-title{
  display: flex;
  height: 10%;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  font-weight: bold;
  border-bottom: 1px solid #b9b9b9 ;
}

.dialog-submit {
  position: absolute;
  width: 100%;
  height: 8%;
  margin-left: -5%;
  margin-bottom: 2%;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: 0;
}
.add-btn{
  display: flex;
  position: relative;
  height: 8%;
  width: 100%;
  justify-content: center;
  background-color: transparent !important;
  border-color: transparent  !important;
  margin-top: 10px;
}
.add-btn::after {
  border: none; 
}

.submit-btn{
  position: relative;
  height: 100%;
  width: 100%;
  background-color: transparent !important;
  border-color: transparent  !important;
}

.submit-btn::after {
  border: none; 
}

.submit-btn::before{
  position: absolute;
  content: '提交';
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  color: #ffffff;
  margin-left: -5%;
}

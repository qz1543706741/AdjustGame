page{
  height: 100%;
  width: 100%;
  overflow-y: hidden;
}

.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  padding: 10px 10px;
}

.btn-single {
  height: 80px;
  position: relative;
  margin: 20px;
}

.btn-single::before {
  content: attr(data-lable);
  display: flex;
  width: 100%;
  height: 100%;
  position: absolute;
  justify-content: center;
  align-items: center;
  color: #fff;
  text-shadow: 0 0 5px #FF0000, 0 0 5px #6bf403;
  font-size: 1.5rem;
}


<!-- 分数 -->
<view
  class="animate__animated {{show?'':'animate__backInRight'}} {{show?'':'animate__delay-4s'}} {{show?'animate__fadeOut':''}}">
  <score-view bind:show="showPay" openid="{{userInfo.openid}}" />
</view>

<!-- 游戏规则 -->
<view hidden="{{!show}}"
  class="animate__animated animate__delay-1s {{!show?'':'animate__zoomIn'}} {{!show?'animate__fadeOut':''}}" style="height:100%;overflow:hidden">
  <level-view class="container" >
    <view>single</view>
  </level-view>
</view>

<!-- 关卡 -->
<view class="container-verticle" style="padding-top:40%">
  <block wx:for="{{gameLevelList}}" wx:key="lable">
    <view
      class="animate__animated {{show?'':'animate__backInLeft'}} {{show?'':item.extendClass}} {{show?'animate__fadeOut':''}}  flex-verticle center">
      <image class="btn-single" src="/image/btn-bg.png" mode="aspectFit" catchtap="handleFunc"
        data-levelId="{{item.levelId}}" data-lable="{{item.lable}}"
        style="filter:{{ item.isBggray?'grayscale(100%)':''}} " />
    </view>
  </block>
</view>